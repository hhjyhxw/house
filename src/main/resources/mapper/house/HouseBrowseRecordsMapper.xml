<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.icloud.house.dao.HouseBrowseRecordsMapper">

    <!-- 基础map -->
    <resultMap type="com.icloud.house.model.HouseBrowseRecords" id="BaseResultMap">
     <id property="id" column="id"/>
     <result property="houseId" column="house_id"/>
     <result property="createTime" column="create_time"/>
     <result property="modifyTime" column="modify_time"/>
     <result property="userId" column="user_id"/>
    </resultMap>

   <!-- 基础字段列 -->
   <sql id="Base_Column_List" >
id,house_id,create_time,user_id
    </sql>

    <select id="selectList" parameterType="java.util.Map" resultMap="BaseResultMap">
        select h.* from t_house_housing h,t_house_browse b
        <where>
            h.id = b.house_id and and t.user_id = #{userId,jdbcType=BIGINT}
            <if test="id != null" >
                and t.id =  #{id,jdbcType=BIGINT}
            </if>
            <if test="userId != null" >
                and t.user_id =  #{userId,jdbcType=BIGINT}
            </if>
        </where>
    </select>
</mapper>